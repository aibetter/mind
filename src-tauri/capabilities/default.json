{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        "http://localhost:6399",
        "https://openrouter.ai",
        "https://aibetter-api.vercel.app"
      ]
    },
    "store:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/server",
          "sidecar": true
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": ["/C", { "validator": "\\S+" }]
        },
        {
          "name": "taskkill",
          "cmd": "taskkill",
          "args": ["/F", "/PID", { "validator": "\\d+" }]
        },
        {
          "name": "lsof",
          "cmd": "lsof",
          "args": ["-t", { "validator": "-i:\\d+" }]
        },
        {
          "name": "kill",
          "cmd": "kill",
          "args": ["-9", { "validator": "\\d+" }]
        }
      ]
    }
  ]
}
